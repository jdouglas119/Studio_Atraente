unit un_movcaixa;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ComCtrls, Vcl.ExtCtrls, Vcl.DBCtrls,
  Vcl.Buttons, Vcl.StdCtrls, sButton, Vcl.Grids, Vcl.DBGrids, Vcl.Mask, acPNG,
  Vcl.Samples.Gauges;

type
  Tfrm_movcaixa = class(TForm)
    GroupBox4: TGroupBox;
    es_novo: TsButton;
    es_ok: TsButton;
    es_sair: TsButton;
    nav_caixa: TDBNavigator;
    Panel1: TPanel;
    StatusBar1: TStatusBar;
    Label2: TLabel;
    data: TDBEdit;
    Label3: TLabel;
    saldo_ant: TDBEdit;
    DBGrid1: TDBGrid;
    fecha: TsButton;
    progres: TGauge;
    cancel: TsButton;
    Panel2: TPanel;
    Image1: TImage;
    Image4: TImage;
    pagamentos: TDBEdit;
    Label7: TLabel;
    cartao_cred: TDBEdit;
    Label4: TLabel;
    Image2: TImage;
    Image5: TImage;
    retiradas: TDBEdit;
    Label8: TLabel;
    cartao_deb: TDBEdit;
    Label5: TLabel;
    Image3: TImage;
    Image6: TImage;
    saldo_atual: TDBEdit;
    Label9: TLabel;
    dinheiro: TDBEdit;
    Label6: TLabel;
    sButton1: TsButton;
    Label1: TLabel;
    usuario: TDBEdit;
    Label10: TLabel;
    aposte: TDBEdit;
    Image7: TImage;
    Label11: TLabel;
    deb_func: TDBEdit;
    Label12: TLabel;
    cheques: TDBEdit;
    Image8: TImage;
    Image9: TImage;
    Panel3: TPanel;
    Label13: TLabel;
    Label14: TLabel;
    Label15: TLabel;
    Label16: TLabel;
    Label17: TLabel;
    Label18: TLabel;
    Label19: TLabel;
    procedure FormShow(Sender: TObject);
    procedure es_sairClick(Sender: TObject);
    procedure es_novoClick(Sender: TObject);
    procedure es_okClick(Sender: TObject);
    procedure FormKeyPress(Sender: TObject; var Key: Char);
    procedure fechaClick(Sender: TObject);
    procedure cancelClick(Sender: TObject);
    procedure sButton1Click(Sender: TObject);
    procedure FormKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
    procedure Panel3Click(Sender: TObject);
  private
    { Private declarations }
