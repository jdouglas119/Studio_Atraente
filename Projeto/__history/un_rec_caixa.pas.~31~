    Label10: TLabel;
    Usuario: TDBEdit;
    DBGrid2: TDBGrid;
    sButton1: TsButton;
    Edit1: TEdit;
    radio: TRadioGroup;
    Label21: TLabel;
    Label23: TLabel;
    SpeedButton1: TSpeedButton;
    data_pesq: TDateEdit;
    sButton2: TsButton;
    Label8: TLabel;
    memo: TDBMemo;
    DBText1: TDBText;
    Label11: TLabel;
    procedure FormShow(Sender: TObject);
    procedure es_sairClick(Sender: TObject);
    procedure es_novoClick(Sender: TObject);
